%h1= "The following movies containing #{@search_term}"
= form_tag movies_add_tmdb_path do
  %table#movies
    %thead
      %tr
        %th Movie Title
        %th Rating
        %th Release Date
        %th Select
    %tbody
      - @movies.each do |movie|
        %tr
          %td= movie[:title] 
          %td= movie[:rating]
          %td= movie[:release_date]
          %td= check_box_tag "tmdb_movies[#{movie[:tmdb_id]}]"
  = submit_tag 'Add selected movies'

=link_to 'Return to Movie List', movies_path
